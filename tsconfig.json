{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}